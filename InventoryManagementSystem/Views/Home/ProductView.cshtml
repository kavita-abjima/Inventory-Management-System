@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "ProductView";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var successMessage = $("#successMessage");
            successMessage.delay(2000).fadeOut(500);
        });
    </script>
}
<div class="d-flex justify-content-between align-items-center">
    <h1>Products</h1>
   
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">
        <button class="btn btn-danger">Logout</button>
    </a>
</div>
<form asp-action="AddProduct" method="get" asp-controller="Home">
    <button type="submit" class="btn btn-success">Add Product</button>
</form>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="text-align: center;">
                @Html.DisplayName("Actions")
            </th>
           
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td style="text-align: center;">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td style="text-align: center;">
                        <a href="@Url.Action("UpdateProduct", "Home", new { id = item.ProductId })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = item.ProductId })" class="btn btn-success">Details</a>
                        <a href="@Url.Action("Delete","Home", new { id = item.ProductId })" class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            }

        }
    </tbody>
   
</table>
<a href="@Url.Action("ProductReport", "Home")">View Product Report</a>


